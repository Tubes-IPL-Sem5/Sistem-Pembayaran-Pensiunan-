<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.shape.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.mycompany.pensiunan.controller.ForgotPasswordController"
            stylesheets="@forgotPassword.css">
    <center>
        <VBox fx:id="contentBox"
              alignment="CENTER"
              spacing="20"
              maxWidth="400"
              styleClass="content-wrapper">
            
            <!-- Icon Circle with Lock -->
            <StackPane>
                <Circle radius="50" styleClass="icon-circle"/>
                <Text text="ðŸ”’" styleClass="lock-icon"/>
            </StackPane>
            
            <!-- Title -->
            <Text text="Lupa Password?" styleClass="title-text"/>
            
            <!-- Subtitle -->
            <Text text="Masukkan username" 
                  styleClass="subtitle-text" 
                  textAlignment="CENTER"
                  wrappingWidth="350"/>
            
            <!-- Form Card -->
            <VBox spacing="16" styleClass="form-card">
                <VBox spacing="8">
                    <Label text="Username" styleClass="field-label"/>
                    <TextField fx:id="usernameField"
                               promptText="Masukkan username Anda"
                               styleClass="input-field"/>
                </VBox>
                
                <Button text="Reset"
                        onAction="#handleSendReset"
                        styleClass="submit-button"/>
                
                <HBox alignment="CENTER" spacing="5">
                    <Text text="Ingat password?" styleClass="back-text"/>
                    <Hyperlink text="Kembali ke Login" 
                               onAction="#handleBackToLogin"
                               styleClass="back-link"/>
                </HBox>
            </VBox>
        </VBox>
    </center>
</BorderPane>