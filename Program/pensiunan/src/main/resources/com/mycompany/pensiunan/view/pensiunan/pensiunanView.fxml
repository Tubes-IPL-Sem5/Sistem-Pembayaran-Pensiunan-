<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.Region?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.mycompany.pensiunan.controller.PensiunanController"
            stylesheets="@pensiunan.css"
            prefWidth="1200" prefHeight="700">
    
    <!-- SIDEBAR -->
    <left>
        <VBox spacing="20" styleClass="sidebar">
            <padding>
                <Insets top="30" right="15" bottom="30" left="15"/>
            </padding>
            
            <Region VBox.vgrow="ALWAYS"/>
            
            <Button styleClass="sidebar-btn-logout" 
                    onAction="#handleLogout"
                    text="âŽ‹"/>
        </VBox>
    </left>
    
    <!-- MAIN CONTENT AREA -->
    <center>
        <BorderPane>
            <!-- HEADER -->
            <top>
                <HBox spacing="20" alignment="CENTER_LEFT" styleClass="header">
                    <padding>
                        <Insets top="20" right="40" bottom="20" left="40"/>
                    </padding>
                    
                    <VBox>
                        <Label text="Selamat Datang," styleClass="header-greeting"/>
                        <Label fx:id="lblNama" text="Jack Lang" styleClass="header-name"/>
                    </VBox>
                    
                    <Region HBox.hgrow="ALWAYS"/>
                    
                    <Label fx:id="lblTanggal" text="Minggu, 04 Januari 2026" styleClass="header-date"/>
                </HBox>
            </top>
            
            <!-- CENTER CONTENT -->
            <center>
                <AnchorPane styleClass="main-content">
                    <VBox spacing="30" AnchorPane.topAnchor="40" AnchorPane.leftAnchor="40" AnchorPane.rightAnchor="40">
                        
                        <!-- DASHBOARD TITLE -->
                        <Label text="Dashboard Pensiunan" styleClass="page-title"/>
                        
                        <!-- CARDS CONTAINER -->
                        <HBox spacing="30" alignment="TOP_LEFT">
                            <!-- CARD SISA GAJI -->
                            <VBox styleClass="card-saldo" prefWidth="380" prefHeight="180">
                                <padding>
                                    <Insets top="25" right="25" bottom="25" left="25"/>
                                </padding>
                                
                                <HBox alignment="CENTER_LEFT">
                                    <Label text="Sisa Gaji Pensiunan" styleClass="card-label"/>
                                    <Region HBox.hgrow="ALWAYS"/>
                                    <VBox alignment="CENTER" styleClass="icon-circle">
                                        <Label text="ðŸ’³" styleClass="icon-wallet"/>
                                    </VBox>
                                </HBox>
                                
                                <Region VBox.vgrow="ALWAYS"/>
                                
                                <Label fx:id="lblSisaGaji" text="Rp 7.000.000" styleClass="saldo-amount"/>
                                <Label text="Terakhir diperbarui hari ini" styleClass="card-subtitle"/>
                            </VBox>
                            
                            <!-- CARD INFO TAMBAHAN -->
                            <VBox styleClass="card-info" prefWidth="380" prefHeight="180">
                                <padding>
                                    <Insets top="25" right="25" bottom="25" left="25"/>
                                </padding>
                                
                                <HBox alignment="CENTER_LEFT">
                                    <Label text="Status Pembayaran" styleClass="card-label-dark"/>
                                    <Region HBox.hgrow="ALWAYS"/>
                                    <VBox alignment="CENTER" styleClass="icon-circle-dark">
                                        <Label text="âœ“" styleClass="icon-check"/>
                                    </VBox>
                                </HBox>
                                
                                <Region VBox.vgrow="ALWAYS"/>
                                
                                <Label text="Pembayaran Lancar" styleClass="info-status"/>
                                <Label text="Periode: Januari 2026" styleClass="card-subtitle-dark"/>
                            </VBox>
                        </HBox>
                        
                        <!-- MENU SECTION -->
                        <VBox spacing="20">
                            <Label text="Menu Akses Cepat" styleClass="section-title"/>
                            
                            <HBox spacing="25">
                                <!-- HISTORY BUTTON -->
                                <Button fx:id="btnHistory"
                                        onAction="#handleOpenHistory"
                                        styleClass="menu-card"
                                        prefWidth="250"
                                        prefHeight="200">
                                    <graphic>
                                        <VBox alignment="CENTER" spacing="15">
                                            <VBox alignment="CENTER" styleClass="menu-icon-bg">
                                                <Label text="ðŸ“„" styleClass="menu-icon"/>
                                            </VBox>
                                            <Label text="History Transfer" styleClass="menu-title"/>
                                            <Label text="Gaji Pensiun" styleClass="menu-subtitle"/>
                                        </VBox>
                                    </graphic>
                                </Button>
                              
                            </HBox>
                        </VBox>
                    </VBox>
                </AnchorPane>
            </center>
        </BorderPane>
    </center>
</BorderPane>